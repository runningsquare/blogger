<!DOCTYPE html>

<html lang="en">

    <head>
        <!-- Viewport meta tags -->
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <!-- CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        <link rel="stylesheet" href="../styles/reader-home.css" type="text/css">

        <!-- Javascript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

        <title>Reader Homepage</title>
    </head>

    <body>
        <div class="page-header container-fluid">
            <p id="page-title"><b>Microblogger</b>: Reader Homepage</p>
            <h1><%= author.blog_title %></h1>
            <h4><%= author.blog_subtitle %></h4>
            <h7><%= author.name %></h7>
        </div>

        <div class="page-body container-fluid">
            <h2 class="page-subheader">Articles</h2>

            <!-- Show articles -->
            <% articles.forEach((article) => {%>
                <a href="/reader/article?id=<%= article.id %>">
                    <div class="article-div">
                            <h2><%= article.title %></h2><br>
                            <h5><%= article.subtitle %><br><%= article.published %></h5>
                    </div>
                </a>
            <% }) %>
        </div>
    </body>

</html>